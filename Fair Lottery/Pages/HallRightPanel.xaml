<Page x:Class="Fair_Lottery.Pages.HallRightPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fair_Lottery.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="HallRightPanel">

    <Grid Grid.Column="1" Grid.RowSpan="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" FontSize="18" HorizontalAlignment="Center" Content="Результаты недавних игр"/>
        <StackPanel Grid.Row="1" Name="History">
            <!--Сдесь история всех последних игр-->
        </StackPanel>
    </Grid>
</Page>
