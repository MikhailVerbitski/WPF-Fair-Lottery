<Page x:Class="Fair_Lottery.Pages.Hall"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fair_Lottery.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Hall">

    <Page.Resources>
        <Style x:Key="GameButtons" TargetType="Button">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Background" Value="#BA5F26"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition  MinWidth="250" Width="0.3*"/>
        </Grid.ColumnDefinitions>

        <Label FontSize="36" 
               Foreground="#D8D8DB" 
               Content="Доступные игры" 
               VerticalAlignment="Bottom"/>

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.4*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0"
                    Grid.Column="0" 
                    Name="ButtonLottery" 
                    Click="StartLottery"
                    Style="{StaticResource GameButtons}"
                    Content="Lottery"/>
            <Button Grid.Column="0" Grid.Row="1"
                    Name="ButtonDice"
                    Click="StartDice"
                    Style="{StaticResource GameButtons}"
                    Content="Dice"/>
        </Grid>

        <Grid Grid.Column="1"
              Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" 
                       FontSize="24" 
                       Foreground="#DF5006"
                       HorizontalAlignment="Center" 
                       Content="Недавние игры"/>
            <ListBox Grid.Row="1" 
                         Background="#36393E" 
                         FontSize="18"
                         BorderThickness="0"
                         Foreground="#E4E4D8"
                         ItemsSource="{Binding LastGames}"/>
        </Grid>
    </Grid>
</Page>